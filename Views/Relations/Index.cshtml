@model IEnumerable<AdminPanelCore.ViewModels.RelationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RelationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MasterRoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SlaveRoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RelationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MasterRoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SlaveRoleName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RelationId }) |
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(function () {
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': true
        })
    })
</script>